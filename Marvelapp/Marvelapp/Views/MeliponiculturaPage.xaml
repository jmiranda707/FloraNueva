                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="0"
                        HorizontalOptions="StartAndExpand"
                        Text="¿Tiene Abejas sin aguijón?"
                        TextColor="Black"
                        VerticalOptions="Center"/>

                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="18"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text="{Binding DondeUbicanColmenas, Mode=TwoWay}"
                        TextColor="Black"/>

                        <Label 
                        Grid.Column="0"
                        Grid.Row="19"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>

                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="3"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text="{Binding ComoObtuvoColmena, Mode=TwoWay}"    
                        TextColor="Black"/>

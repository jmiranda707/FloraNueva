                        BackgroundColor="#910b20"
                        BorderRadius="8"
                        Command="{Binding GuardarCommand}"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"
                        IsEnabled="True"
                        Text="Guardar"
                        TextColor="White"/>

                        <Button 
                        BackgroundColor="#910b20"
                        BorderRadius="8"
                        Command="{Binding VolverCommand}"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"
                        IsEnabled="True"
                        Text="Volver"
                        TextColor="White"/>
                    </StackLayout>
                </StackLayout>

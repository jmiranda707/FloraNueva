                        Text=""
                        TextColor="Black"/>

                        <!--aqui viene la Fila 4-->
                        <Image 
                        Grid.Column="1"
                        Grid.Row="4"
                        HorizontalOptions="FillAndExpand"
                        Source="close_black"
                        VerticalOptions="FillAndExpand"/>

                        <Image 
                        Grid.Row="4"
                        Grid.Column="2"
                        HorizontalOptions="FillAndExpand"
                        Source="editar_black.png"
                        VerticalOptions="FillAndExpand"/>

                        <custom:CustomEntryCenter
                        Text=""
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        TextColor="Black"
                        Grid.Column="3"
                        Margin="0"
                        Grid.Row="4"/>

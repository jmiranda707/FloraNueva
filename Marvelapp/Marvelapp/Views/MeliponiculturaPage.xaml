                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="11"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text="{Binding DondeSeVende, Mode=TwoWay}"
                        TextColor="Black"/>

                        <Label 
                        Grid.Column="0"
                        Grid.Row="12"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="12"
                        HorizontalOptions="StartAndExpand"
                        Text="Precio de venta"
                        TextColor="Black"
                        VerticalOptions="End"/>
                        <custom:CustomEntry
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="13"
                        HorizontalOptions="Fill"
                        Keyboard="Numeric"
                        Margin="0"
                        Text="{Binding PrecioVenta, Mode=TwoWay}"
                        TextColor="Black"/>

                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="14"
                        HorizontalOptions="StartAndExpand"
                        Text="Meliponario"
                        TextColor="#db6262"
                        VerticalOptions="Center"/>

                        <Label 
                        Grid.Column="0"
                        Grid.Row="15"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="15"
                        HorizontalOptions="StartAndExpand"
                        Text="¿Dónde se coloca las colmenas?"
                        TextColor="Black"
                        VerticalOptions="End"/>
                        <Picker 
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="16"
                        FontSize="Medium"
                        HorizontalOptions="FillAndExpand"
                        SelectedItem="{Binding DondeColocaColmena}"
                        Title="Seleccione">
                            <Picker.Items>
                                <x:String>Sin Meliponario</x:String>
                                <x:String>Meliponario Individual</x:String>
                                <x:String>Meliponario Gregario</x:String>
                            </Picker.Items>
                        </Picker>
                        <Label 
                        Grid.Column="0"
                        Grid.Row="17"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>

                        TextColor="Black"
                        VerticalOptions="End"/>

                        <Picker 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="24"
                        HorizontalOptions="FillAndExpand"
                        SelectedItem="{Binding RiesgoRobo}"
                        Title="Seleccione">
                            <Picker.Items>
                                <x:String>Mínimo</x:String>

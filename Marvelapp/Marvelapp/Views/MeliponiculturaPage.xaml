                    </Grid>

                    <!-- VIENE EL GRID DE OTRAS ESPECIES EN ADELANTE-->
                    <Grid 
                    Margin="0,-5,0,-5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="2.5*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label 
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        Grid.Column="1"
                        Grid.Row="0"
                        FontSize="Medium"
                        HorizontalOptions="StartAndExpand"
                        Text="Otras especies"
                        TextColor="Black"
                        VerticalOptions="End"/>
                        <custom:CustomEntry
                        Grid.ColumnSpan="2"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text="{Binding OtrasEspecies, Mode=TwoWay}"
                        TextColor="Black"/>

                        <Label 
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        Grid.Column="1"
                        Grid.Row="2"
                        FontSize="Medium"
                        HorizontalOptions="StartAndExpand"
                        Text="¿Dónde y cómo obtuvo esas colmenas?"
                        TextColor="Black"
                        VerticalOptions="End"/>

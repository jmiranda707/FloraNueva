                        VerticalOptions="Center"
                        WidthRequest="35">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding InventarioCommand}"></TapGestureRecognizer>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>

                    <!-- GRID NUMERO 2: TABLAS-->
                    <Grid 

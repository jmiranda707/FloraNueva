                            VerticalOptions="Center"></Switch>
                            <Label 
                            FontSize="Medium"
                            Text="NO"
                            TextColor="Black"
                            VerticalOptions="Center"/>
                        </StackLayout>
                        <Label 
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="Center"/>
                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalOptions="Start"
                        Text="¿Desde cuándo las tiene?"
                        TextColor="Black"
                        VerticalOptions="Center"/>

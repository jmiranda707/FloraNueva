                        <custom:CustomEntryCenter
                        Grid.Column="7"
                        Grid.Row="1"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text=""    
                        TextColor="Black"
                        VerticalOptions="Fill"/>
                        <!-- aqui viene la Fila 2-->
                        <Image 
                        Grid.Column="1"
                        Grid.Row="2"
                        HorizontalOptions="FillAndExpand"
                        Source="close_black"
                        VerticalOptions="FillAndExpand"/>
                        <Image 
                        Grid.Column="2"
                        Grid.Row="2"
                        HorizontalOptions="FillAndExpand"
                        Source="editar_black.png"
                        VerticalOptions="FillAndExpand"/>
                        <custom:CustomEntryCenter
                        Grid.Column="3"
                        Grid.Row="2"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text=""
                        TextColor="Black"

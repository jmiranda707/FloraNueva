                        BackgroundColor="LightGray"
                        Grid.Column="2"
                        Grid.Row="1"
                        Keyboard="Numeric"
                        Text="{Binding DesdeCuando, Mode=TwoWay}"
                        VerticalOptions="Center">
                        </custom:CustomEntryCenter>
                    </Grid>


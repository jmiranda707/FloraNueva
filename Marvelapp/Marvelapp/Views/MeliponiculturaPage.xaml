                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="5"
                        HorizontalOptions="StartAndExpand"
                        Text="¿Produce miel?"
                        TextColor="Black"
                        VerticalOptions="Center"/>

                        <StackLayout 
                        Grid.Column="2"
                        Grid.Row="5"
                        HorizontalOptions="End"
                        Orientation="Horizontal">
                            <Label 
                            FontSize="Medium"
                            Text="SI"
                            TextColor="Black"
                            VerticalOptions="Center"/>
                            <Switch 
                            IsToggled="{Binding ProduceMiel, Mode=TwoWay}"
                            VerticalOptions="Center"/>
                            <Label 
                            FontSize="Medium"
                            Text="NO"
                            TextColor="Black"
                            VerticalOptions="Center"/>
                        </StackLayout>

                        <Label 
                        Grid.Column="0"
                        Grid.Row="6"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="6"
                        HorizontalOptions="StartAndExpand"
                        Text="¿Cómo la cosecha?"
                        TextColor="Black"
                        VerticalOptions="End"/>
                        <custom:CustomEntry
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="7"
                        HorizontalOptions="Fill"
                        Margin="0"
                        Text="{Binding ComoCosecha, Mode=TwoWay}"
                        TextColor="Black"/>

                        <Label 
                        Grid.Column="0"
                        Grid.Row="8"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="8"
                        HorizontalOptions="StartAndExpand"
                        Text="¿Cuál es el destino de la miel?"
                        TextColor="Black"
                        VerticalOptions="End"/>
                        <Picker 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="9"
                        HorizontalOptions="FillAndExpand"
                        SelectedItem="{Binding SelectedOption}"
                        Title="Seleccione">
                            <Picker.Items>
                                <x:String>Venta</x:String>
                                <x:String>Autoconsumo</x:String>
                                <x:String>Venta y Autoconsumo</x:String>
                            </Picker.Items>
                        </Picker>
                        <Label 
                        Grid.Column="0"
                        Grid.Row="10"
                        Text="*"
                        TextColor="Red"
                        VerticalOptions="End"/>
                        <Label 
                        FontSize="Medium"
                        Grid.Column="1"
                        Grid.Row="10"
                        HorizontalOptions="StartAndExpand"
                        Text="Especificar a donde se vende"
                        TextColor="Black"
                        VerticalOptions="End"/>

                            FontSize="Medium"
                            TextColor="Black"
                            Grid.Column="1"
                            HorizontalOptions="Fill"
                            Grid.Row="33"
                            Grid.ColumnSpan="2">
                    </custom:CustomEditor>

                </Grid>
                <!-- estos son los BOTONES-->
                <StackLayout Padding="4,0,4,0" Margin="0,10,0,15">
                    <Button BackgroundColor="#910b20"
                    IsEnabled="{Binding IsEnabled}"
                    Command="{Binding GuardarCommand}"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HeightRequest="50"
                    BorderRadius="8"
                    HorizontalOptions="FillAndExpand"
                    Text="Guardar"
                    TextColor="White">
                    </Button>
                    <Button BackgroundColor="#910b20"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    BorderRadius="8"
                    FontSize="Medium"
                    IsEnabled="{Binding IsEnabled}"
                    Command="{Binding VolverCommand}"
                    HorizontalOptions="FillAndExpand"
                    Text="Volver"
                    TextColor="White">
                    </Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>